{
  "manifest_version": 3,
  "name": "Popup Messenger",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting"]
}